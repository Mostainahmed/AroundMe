<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_location"
    android:background="#fff">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/alizarin"/>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        android:id="@+id/linearLayout2">


    </LinearLayout>




    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/image"
        android:layout_marginTop="16dp"
        >


    </LinearLayout>



    <TextView
        android:id="@+id/button_get_vip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/go_to_the_store"
        android:textColor="#2b73e1"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:lines="1"
        android:layout_marginBottom="10dp"

        android:layout_marginTop="5dp"
        android:padding="5dp" />

    <Button

        android:id="@+id/button_travel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/button_corner"
        android:text="@string/vip_activte"
        android:textSize="16dp"
        android:textColor="#fff"
        android:gravity="center"
        android:padding="9dp"


        android:layout_below="@+id/textView41"
        android:layout_marginTop="38dp"
        android:layout_alignRight="@+id/textView41"
        android:layout_alignEnd="@+id/textView41"
        android:layout_alignLeft="@+id/textView41"
        android:layout_alignStart="@+id/textView41"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/you_have_not2"
        android:id="@+id/textView32"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_below="@+id/linear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/private_mode"
        android:id="@+id/textView41"
        android:layout_below="@+id/textView32"
        android:layout_marginTop="10dp"
        android:textColor="@color/gray2"
        android:layout_alignRight="@+id/textView32"
        android:layout_alignEnd="@+id/textView32"
        android:layout_alignLeft="@+id/textView32"
        android:layout_alignStart="@+id/textView32"
        android:gravity="center"
        android:textSize="16dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/cost_100_credits"
        android:textColor="#FFE37A7A"
        android:gravity="center"
        android:textSize="13sp"
        android:id="@+id/cost"
        android:layout_below="@+id/textView41"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <ImageView
        android:id="@+id/image"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/private_prifile"

        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
